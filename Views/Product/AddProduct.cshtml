  @model Product
@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddProduct</title>
</head>
<body>
  
    <h1 class=" p-3 mb-2 bg-primary text-white">AddProduct</h1>

    <form asp-action="AddProduct" asp-controller="Product" method="post" enctype="multipart/form-data">


        <span class="text-danger"></span>
        <label asp-for="img" class="form-label">Image</label>
        <input type="file" asp-for="img" class="form-control" />

        <span class="text-danger"></span>
        <label asp-for="name" class="form-label">Name</label>
        <input asp-for="name" class="form-control" />


        <span class="text-danger"></span>
        <label asp-for="description" class="form-label">Description</label>
        <input asp-for="description" class="form-control" />

        <span class="text-danger"></span>
        <label asp-for="price" class="form-label">Price</label>
        <input asp-for="price" class="form-control" />

        <input type="submit" value="Add Product" />
    </form>


    @section Scripts{
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="/lib/jquery-validation/dist/jquery.validate.js"></script>
        <script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    }

</body>
</html>
