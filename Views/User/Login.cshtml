@model LoginVM
@{
    Layout = "_Layout";
}




<div class="p-3 mb-2 bg-primary text-white"> <h1>Login </h1> </div>
<form asp-action="Login" asp-controller="User" method="post">

    <section class="vh-100 gradient-custom">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card bg-dark text-white" style="border-radius: 1rem;">
                        <div class="card-body p-5 text-center">

                            <div class="mb-md-5 mt-md-4 pb-5">

                                <h2 class="fw-bold mb-2 text-uppercase">Login</h2>
                                <p class="text-white-50 mb-5">Please enter your login and password!</p>

                                <div class="form-outline form-white mb-4">
                                    <span asp-validation-for="email" class="text-danger"></span>
                                    <input  asp-for="email" type="email" id="typeEmailX" class="form-control form-control-lg" />
                                    <label class="form-label" asp-for="email">Email</label>
                                </div>

                                <div class="form-outline form-white mb-4">
                                    <span asp-validation-for="password" class="text-danger"></span>
                                    <input asp-for="password" type="password" id="typePasswordX" class="form-control form-control-lg" />
                                    <label class="form-label" asp-for="password">Password</label>
                                </div>

                              <input class="btn btn-outline-light btn-lg px-5" type="submit" value="Login"/>
                                </div>
                                </div>
                                </div>
                                </div>
                                </div>
                                </div>
                                </section>

    @if (Model.message != "")
    {
        <div class="text-danger">@Model.message</div>
    }
   
   
    </form>
@section Scripts{
    <script src="/lib//jquery/dist/jquery.min.js"></script>
    <script src="/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    }



